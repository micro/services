{
    "compilerOptions": {
      "module": "ES2015",
      "target": "ES6",
      "declaration": true,
      "lib": ["es2015", "dom"],
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "outDir": "./tmp/esm",
      "strict": true,
      "moduleResolution": "node",
      "esModuleInterop": true
    },
    "include": ["src/index.ts", "src/**/*"],
    "exclude": ["./dist", "./node_modules"]
  }